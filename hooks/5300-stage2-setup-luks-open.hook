#!/bin/bash
set -e


is_build_encrypted && {
    # Open LUKS
    echo_debug "Attempting to open LUKS ${_BLKDEV}${__PARTITIONPREFIX}2 ..."
    if [ ! -z "${_LUKSPASSWD}" ]; then
        echo "${_LUKSPASSWD}" | cryptsetup -v luksOpen ${_BLKDEV}${__PARTITIONPREFIX}2 ${_ENCRYPTED_VOLUME_NAME}
    else
        cryptsetup -v luksOpen ${_BLKDEV}${__PARTITIONPREFIX}2 ${_ENCRYPTED_VOLUME_NAME}
    fi
    if [ $? -eq 0 ]; then
        echo_debug "- LUKS opened."
    else
        echo_error "- Aborting since we failed to open LUKS on ${_BLKDEV}${__PARTITIONPREFIX}2"
        exit_program 1
    fi
    echo
} || echo_debug "Skipping: building unencrypted configuration."
