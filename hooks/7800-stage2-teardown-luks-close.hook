#!/bin/bash
set -e


is_build_encrypted && {
    # Close LUKS
    echo_debug "Attempting to close open LUKS ${_BLKDEV}${__PARTITIONPREFIX}2 ..."
    if cryptsetup -v luksClose /dev/mapper/${_ENCRYPTED_VOLUME_NAME}
    then
        echo_debug "- LUKS closed."
    else
        echo_error "- Aborting since we failed to close LUKS /dev/mapper/${_ENCRYPTED_VOLUME_NAME}"
        exit_program 1
    fi
    echo
} || echo_debug "Skipping: building unencrypted configuration."
