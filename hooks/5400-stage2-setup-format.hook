#!/bin/bash
set -e

# Format LUKS
echo_debug "Formatting /dev/mapper/${_ENCRYPTED_VOLUME_NAME}"
if mkfs.ext4 /dev/mapper/${_ENCRYPTED_VOLUME_NAME}
then
    echo_debug "- Formatted"
else
    echo_error "- Abort - failed to format /dev/mapper/${_ENCRYPTED_VOLUME_NAME} to ext4"
    exit_program 1
fi
    
# Format boot partition
echo_debug "Formatting Boot Partition"
mkfs.vfat ${_BLKDEV}${__PARTITIONPREFIX}1
echo
